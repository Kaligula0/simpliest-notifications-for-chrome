{
	"manifest_version": 2,
	"name": "Simpliest Facebook notifications (low memory)",
	"short_name": "Simpliest FB notifications",
	"version": "2.7.2",
	"author": "Kaligula",

	"description": "Extension checks new notifications on Facebook (messages, notifications, friend requests) but consumes very low memory!",
	"homepage_url": "https://github.com/Vinne2/simpliest-notifications-for-chrome",
	"minimum_chrome_version": "18",
	"permissions": [
		"http://mbasic.facebook.com/*",
		"https://mbasic.facebook.com/*",
		"tabs",
		"alarms"
	],

	"icons": {
		"16" : "images/icon-16.png",
		"48" : "images/icon-48.png",
		"96" : "images/icon-96.png",
		"128" : "images/icon-128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "images/icon.png"
	},
	"options_page": "options.html"
}