{
	"manifest_version": 2,
	"name": "FBnotifier (low memory!)",
	"short_name": "FBnotifier",
	"version": "2.6.0",
	"author": "Kaligula",

	"description": "The simpliest FB notifier that consumes very low memory.",
	"homepage_url": "https://code.google.com/p/fbnotifier-for-chrome/",
	"minimum_chrome_version": "18",
	"permissions": [
		"http://mobile.facebook.com/*",
		"https://mobile.facebook.com/*",
		"tabs",
		"alarms"
	],

	"icons": {
		"16" : "images/icon-16.png",
		"48" : "images/icon-48.png",
		"128" : "images/icon-128.png"
	},
	"background": {
		"page": "background.html",
		"persistent": false
	},
	"browser_action": {
		"default_icon": "images/icon.png"
	},
	"options_page": "options.html"
}